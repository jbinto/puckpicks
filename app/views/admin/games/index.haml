%h2.admin Edit games

.well.well-small
  %h3 Games for the past 7 days
  - if @games.count == 0
    None.
  - else
    %table.table.table-striped.table-hover
      %tr
        %th Date
        %th Home
        %th Away
        %th Result
      - @games.each do |game|
        %tr
          %td= date_and_time(game.faceoff_time)
          %td
            = game.home.full_name
          %td
            = game.away.full_name
          - if game.finished?
            %td Finished
          - else
            %td
              = form_for [:admin, game] do |f|
                = f.label :home_score, game.home.code
                = f.text_field :home_score
                = f.label :away_score, game.away.code
                = f.text_field :away_score
                = f.submit "Set"
