%h1.brand= link_to 'PuckPicks', root_path
%ul  
  - if logged_in?
    %li= link_to 'My Picks', my_picks_path
    - if current_user && current_user.admin?
      %li= link_to 'Edit games', admin_games_path, class: 'admin'
  - else
    = link_to 'Log in', :login
    = link_to 'Register', register_path

- if logged_in?
  %p.user
    Signed in as #{current_user.username}.
    = link_to 'Log out', sessions_path, :method => :delete

%p.time= "Current time #{date_and_time(Now.now)}"
