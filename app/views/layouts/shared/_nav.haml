.row
  .large-12.columns
    %nav.top-bar
      %ul.title-area
        %li.name
          %h1= link_to 'PuckPicks', root_path
        %li.toggle-topbar.menu-icon
          = link_to '#' do
            %span menu
    
      %section.top-bar-section
        - if logged_in?
          %ul.left
            %li= link_to 'My Picks', [:my, :picks]
            - if current_user && current_user.admin?
              %li= link_to 'Edit Games', [:admin, :games], class: 'admin'
          %ul.right
            %li= link_to "Log out (#{current_user.username})", :sessions, method: :delete
        - else # i.e. not logged in
          %ul.right
            %li= link_to 'Register', :register
            %li= link_to 'Log in', :login

      / end of ul.title-area
    / end of nav.top-bar
  / end of .large-12.columns
/ end of .row

